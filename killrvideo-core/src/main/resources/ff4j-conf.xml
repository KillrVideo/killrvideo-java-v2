<?xml version="1.0" encoding="UTF-8" ?>
<ff4j xmlns="http://www.ff4j.org/schema/ff4j"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.ff4j.org/schema/ff4j http://ff4j.org/schema/ff4j-1.4.0.xsd">
    
    <features>
      
      <!-- ASYNCHRONOUS? -->
      <feature-group name="ASYNCHRONOUS_SERVICES" >
      
        <feature uid="asyncCommentService" 
        			enable="true" 
        			description="Allow to execute the comment operation in asynchronous manner" >
        		<flipstrategy class="org.ff4j.strategy.PonderationStrategy" >
				<param name="weight" value="0.5" />
			</flipstrategy>
        </feature>
        <feature uid="asyncVideoCatalogService" 
        			enable="true" 
        			description="Allow to execute the comment operation in asynchronous manner" >
        		<flipstrategy class="org.ff4j.strategy.PonderationStrategy" >
				<param name="weight" value="0.5" />
			</flipstrategy>
        </feature>
        
      </feature-group>
      
       <feature uid="distributedTracing" 
       			description="Send information to openZipKin" 
       			enable="true" />
       	
    </features>
    
</ff4j>

